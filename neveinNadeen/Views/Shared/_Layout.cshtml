<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .body-content{
            margin-top:40px;
        }
        .navbar {
            background-color: black;
            position: fixed; /* Set the navbar to fixed position */
            top: 0; /* Position the navbar at the top of the page */
            width: 100%; /* Full width */
            height: 60px;
            z-index: 200;
        }

        .navbar a {
                float: left;
                display: block;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size:17px;
             
       }

                /* Change background on mouse-over */
       .navbar a:hover {
                    background: #ddd;
                    color: black;
                }

        /* Main content */
        .main {
            margin-top: 30px; /* Add a top margin to avoid content overlay */
        }

        .logo {
            color: black;
            font: 2em/1 Impact, HelveticaNeue-CondensedBold, sans-serif;
            font-size: 30px;
            position: relative;
            bottom:8px;
            right:6px;
        }
        .logo-container {
            border-radius: .30em;
            background: radial-gradient(#ffffb8, #ce981d);
            margin-left: 10px;
            margin-top: 10px;
            margin-bottom: 10px;
            height: 40px;
            width: 80px;
            position: absolute;
           
               
        }
        footer {
            position: fixed;
            left: 0;
            bottom:-10px;
            width: 100%;
            background-color: black;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid ">
            <a href="" class="logo-container">
                <h1 class="logo">IMDb</h1>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="true" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    @*<li class="nav-item">
                            <a class="nav-link " aria-current="page" href="#"></a>
                            @Html.ActionLink("Signup ", "NewUser", "User", new { area = "" }, new { @class = "navbar-brand" })
                        </li>*@

                    @*<li class="nav-item">
                            <a class="nav-link " aria-current="page" href="@Url.Action("Edit", "User",new { id = 2 })"></a>
                            @Html.ActionLink("Profile ", "Edit", "User", new { area = "" }, new { @class = "navbar-brand" })
                        </li>*@
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="#">
                            @Html.ActionLink("Movies ", "Index", "Movie", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="#">
                            @Html.ActionLink("Actors", "Index", "Actor", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="#">
                            @Html.ActionLink("Directors", "Index", "Director", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="#">
                            @Html.ActionLink("Profile", "Details", "User", new { area = "" }, new { @class = "navbar-brand" })
                        </a>
                    </li>
                    @*@if (Session["UserId"] is string)

                        {
                            <li class="nav-item">
                                <button class="nav-link " aria-current="page" onclick="logout()" hidden id="logout">
                                    @Html.ActionLink("Logout ", "Login", "User", new { area = "" }, new { @class = "navbar-brand" })
                                </button>
                            </li>
                        }*@

                </ul>
            </div>
        </div>
    </nav>
    <br />
    <br />

    <div class="container body-content">
        @RenderBody()

    </div>
    <br />
    <br />
    <footer>
        <p>&copy; @DateTime.Now.Year - IMDb Application</p>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
