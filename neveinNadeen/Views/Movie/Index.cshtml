@model IEnumerable<neveinNadeen.Models.Movie>

@{
    /**/

    ViewBag.Title = "Movies";
}


<!DOCTYPE html>
<html>
<head>
    <link href="~/Styles/Index.css" rel="stylesheet" />
</head>
<body>
    <form class="form-inline" style="">
        @using (Html.BeginForm("Index", "Movie", FormMethod.Get))
        {

            <div style="">
                <input id="searching" name="searching" class="form-control mr-sm-2" type="text" placeholder="Search IMDb" aria-label="Search" >
                <input class="btn btn-outline-warning" type="submit" value="Search" >

            </div>

        }
    </form>

    @{
        string name = "";

    }


    <table class="table table-striped">

        @foreach (var item in Model)
        {
            name = @Html.DisplayFor(modelItem => item.Name).ToString();
            <tr>
                <td width="200" height="150">
                    <img src="~/images/movies/@item.Image" width="100" height="150" />
                </td>
                <td style="padding-top:75px ; font-size:20px">

                    <div class="small-box"><span class="name">@Html.ActionLink(name, "Details", "Movie", new { id = item.Id }, new { style = "" })</span></div>
                </td>

            </tr>
        }

    </table>
</body>
</html>